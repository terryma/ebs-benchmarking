- var attributes = [{name:'instance-type', label:'Instance Type', values:{m1small:'m1.small', m1large:'m1.large', c1xlarge:'c1.xlarge'}}, {name:'file-system', label:'File System', values:{ext3:'ext3', ext4:'ext4', xfs:'xfs'}}, {name:'mount-options', label:'Mount Options', values:{none:'none', noatime:'noatime'}}, {name:'storage-type', label:'Storage Type', values:{euphemeral:'euphemeral', ebs:'ebs'}}]
h1= title
form#form
    - each attribute in attributes
        .field
            label.field-label #{attribute.label}:
            .buttonset
                - each val, key in attribute.values
                    input(id='#{key}', type='radio', name='#{attribute.name}')
                    label(for='#{key}') #{val}
#result
    p Summary:
    #summary
    p Graph:
    #graph
    p Test output:
    #test-output

